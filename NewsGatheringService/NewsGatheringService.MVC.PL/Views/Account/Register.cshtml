@model RegisterRequest

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post" novalidate="novalidate">
                <h4>Регистрация на сайте</h4>
                <hr>
                <div class="validation" asp-validation-summary="ModelOnly"></div>

                <div class="form-group">
                    <label asp-for="Login">Введите Login</label>
                    <input class="form-control" asp-for="Login" />
                    <span class="text-danger field-validation-valid" asp-validation-for="Login"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Введите пароль</label>
                    <input class="form-control" asp-for="Password" />
                    <span class="text-danger field-validation-valid" asp-validation-for="Password"></span>
                </div>
                <div>
                    <label asp-for="ConfirmPassword">Повторите пароль</label><br />
                    <input class="form-control" asp-for="ConfirmPassword" />
                    <span class="text-danger field-validation-valid" asp-validation-for="ConfirmPassword" />
                </div>

                <div class="form-group">
                    <button id="login-submit" type="submit" class="btn btn-primary">Зарегистрироваться</button>
                </div>
            </form>
        </section>
    </div>
</div>
