@model AuthenticateRequest

<h1>Log in</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post" novalidate="novalidate">
                <h4>Вход на сайт</h4>
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <hr>
                <div class="form-group">
                    <label asp-for="Login">Введите Login</label>
                    <input class="form-control" asp-for="Login" />
                    <span class="text-danger field-validation-valid" asp-validation-for="Login"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Введите пароль</label>
                    <input class="form-control" asp-for="Password" />
                    <span class="text-danger field-validation-valid" asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <button id="login-submit" type="submit" class="btn btn-primary">Войти</button>
                </div>
            </form>
        </section>
    </div>
</div>
