@model IQueryable<Category>


<nav class="navbar navbar-expand-lg navbar-light bg-light">

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavDropdown">
        @foreach (var category in Model)
        {
            <div class="dropdown show">

                <a asp-controller="Home" asp-action="Index" asp-route-categoryName=@category.Name
                   onclick="location.href = '?categoryName=@category.Name'"
                   type="button"
                   class="nav-link dropdown-toggle"
                   id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" role="button">@category.Name</a>
                @if (category.Subcategories.Count() != 0)
                {
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        @foreach (var subcategory in category.Subcategories)
                        {
                            <a asp-controller="Home" asp-action="Index" asp-route-subcategoryName=@subcategory.Name
                               class="dropdown-item">@subcategory.Name</a>
                        }
                    </div>
                }
            </div>
        }
    </div>
</nav>